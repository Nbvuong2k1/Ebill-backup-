@model  Ebill.Models.BillDetail

@{
    ViewBag.Title = "Chi tiết hóa đơn";
}

<div class="container shadow rounded mt-4">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">Hóa Đơn</h3>
            <pre>
Hà Nội, Việt Nam
Phone   : 0982764xxx
Website : www.hoadondientu.com
Email  : hoadondientu2024@gmail.com
</pre>
        </div>
        <div class="offset-3 col-3">
            <h3 class="text-primary">Hóa đơn điện tử</h3>
            <pre>
Number  :@Model.Id

</pre>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-3">
            <h4 class="bg-primary text-white">Hóa đơn</h4>
            <pre>
@Model.CustomerName
@Model.MobileNumber
@Model.Address
</pre>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá thành</th>
                        <th>Số lượng</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h4 class="float-end">Tổng tiền : @Model.TotalAmount</h4>
        </div>
    </div>
</div>

